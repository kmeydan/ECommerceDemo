
@{
    Layout = "_Layout";
}
<body>
    @Html.Partial("_HomeTopCarouselPartial")

    <!-- Featured Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3">
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">Güvenli Alışveriş</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                    <h5 class="font-weight-semi-bold m-0">Hızlı Teslimat</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">Değişim ve İade</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">24/7 Destek</h5>
                </div>
            </div>
        </div>
    </div>
    <!-- Featured End -->
    @Html.Partial("_HomeCategoriesPartial")
    <!-- Products Start -->
    @Html.Partial("_HomeProductsPartial")
    <!-- Products End -->
    <!-- Offer Start -->
    @Html.Partial("_HomeOfferBannerPartial")
    <!-- Offer End -->
    <!-- Products Start -->
    @Html.Partial("_HomeBottomProductsPartial")
    <!-- Products End -->
    
</body>