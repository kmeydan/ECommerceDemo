@model HomeBannerOfferViewModel
@{
	Layout = null;
	var dongu = 0;
	var donguindikator = 0;
	var slide = 0;
}
<div class="container-fluid mb-3">
	<div class="row px-xl-5">

		<div class="col-lg-8">

			<div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
				<ol class="carousel-indicators">

					@foreach (var item in Model.Sliders)
					{
						if (item.SliderActive == true)
						{
							if (Model.Sliders.Count > 1 && donguindikator == 0)
							{
								<li data-target="#header-carousel" data-slide-to="@slide" class="active"></li>
								donguindikator = 1;
								slide++;
							}
							else
							{
								<li data-target="#header-carousel" data-slide-to="@slide" class=""></li>
								slide++;
							}
						}

					}

				</ol>

				<div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
					<div class="carousel-inner">
						@foreach (var item in Model.Sliders)
						{
							@if (item.SliderActive == true)
							{
								if (Model.Sliders.Count > 1 && dongu == 0)
								{
									<div class="carousel-item position-relative active" style="height: 430px;">
										<img class="position-absolute w-100 h-100" src="img/@item.SliderPhotoUrl" style="object-fit: cover;">
										<div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
											<div class="p-3" style="max-width: 700px;">
												<h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@item.SliderName</h1>
												<p class="mx-md-5 px-5 animate__animated animate__bounceIn">@item.SliderAlt</p>
												<a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="@item.SliderLink">Alışverişe Başla</a>
											</div>
										</div>
									</div>
									dongu = 1;
								}
								else
								{
									<div class="carousel-item position-relative" style="height: 430px;">
										<img class="position-absolute w-100 h-100" src="img/@item.SliderPhotoUrl" style="object-fit: cover;">
										<div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
											<div class="p-3" style="max-width: 700px;">
												<h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@item.SliderName</h1>
												<p class="mx-md-5 px-5 animate__animated animate__bounceIn">@item.SliderAlt</p>
												<a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="@item.SliderLink">Alışverişe Başla</a>
											</div>
										</div>
									</div>
								}
							}



						}


					</div>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			@foreach (var item in Model.OfferTop1)
			{
				if (item.SliderActive)
				{
					<div class="product-offer mb-30" style="height: 200px;">
						<img class="img-fluid" src="img/@item.SliderPhotoUrl" alt="">
						<div class="offer-text">
							<h6 class="text-white text-uppercase">@item.SliderName</h6>
							<h3 class="text-white mb-3">@item.SliderAlt</h3>
							<a href="@item.SliderLink" class="btn btn-primary">Haydi</a>
						</div>
					</div>
				}
				break;

			}

			@foreach (var item in Model.OfferTop2)
			{
				if (item.SliderActive)
				{
					<div class="product-offer mb-30" style="height: 200px;">
						<img class="img-fluid" src="img/@item.SliderPhotoUrl" alt="">
						<div class="offer-text">
							<h6 class="text-white text-uppercase">@item.SliderName</h6>
							<h3 class="text-white mb-3">@item.SliderAlt</h3>
							<a href="@item.SliderLink" class="btn btn-primary">Haydi</a>
						</div>
					</div>
				}
				break;
			}
		</div>
	</div>
</div>
