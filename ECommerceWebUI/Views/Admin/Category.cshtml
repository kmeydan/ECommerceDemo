@model CategoryListViewModel
@{
	ViewData["Title"] = "Category";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0">Kategoriler</h1>
				</div><!-- /.col -->
				<div class="col-sm-6">
					<ul class="breadcrumb float-sm-right">
						<a asp-action="AddCategory" asp-controller="Admin" class="btn btn-success btn-sm">
							<i class="fa fa-plus-square"></i>
							Yeni Ekle
						</a>

					</ul>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- Search Customer -->
	<section class="content">

		<!-- Default box -->

		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Arama</h3>
			</div>
			<form asp-action="Category" asp-controller="Admin" method="post">
				<div asp-validation-summary="All"></div>

				<div class="card-body row">
					<div class="col-lg-4">
						<!-- Category-->
						<div class="form-group">
							<label>Kategori İsmi</label>
							<div class="input-group">
								<input type="text" class="form-control" name="name">
							</div>
							<!-- /.input group -->
						</div>

						<!-- Category -->
						<!-- /.form group -->
					</div>
					<!-- /.card-body -->
					<div class="col-lg-12">
						<button type="submit" class="btn btn-info btn-sm col-12">
							<i class="fas fa-search">
							</i> Arama
						</button>
					</div>


				</div>
			</form>

			<!-- /.card -->
		</div><!-- /.row -->


	</section>
	<!-- Search Customer -->
	<!-- Main content -->
	<section class="content">
		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Kategoriler</h3>
			</div>
			<div class="card-body p-0">
				<table class="table table-striped projects">
					<thead>
						<tr>
							<th style="width: 55%">
								Adı
							</th>
							<th style="width: 15%">
								Yayınlandı
							</th>
							<th style="width: 20%">
								Oluşturulma Tarihi
							</th>
							<th>
								Düzenle
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.Kategori)
						{
							<tr>
								<td>
									@item.KategoriAdi
								</td>
								<td>
									@if (item.Aktif == true)
									{
										<i class="icon fas fa-check text-success"></i>

									}
								</td>
								<td>
									<a>
										@item.OlusturulmaTarihi
									</a>
								</td>
								<td>
									<a class="btn btn-info btn-sm" asp-action="UpdateCategory" asp-controller="Admin" asp-route-categoryId="@item.KategoriID">
										<i class="fas fa-pencil-alt">
										</i>
										Düzenle
									</a>
								</td>

							</tr>

						}
					</tbody>

				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->


	</section>
	<!-- /.content -->
</div>

