				<div class="col-sm-6">
					<h1 class="m-0">Carousel Yönetimi</h1>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- Search Customer -->
