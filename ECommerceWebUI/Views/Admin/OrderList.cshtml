@using ECommerceWebUI.Models.ViewModels.AdminViewModels.ViewModel.Orders;
@model AdminOrderIndexViewModel
@{
	ViewData["Title"] = "OrderList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0">Siparişler</h1>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- Search Customer -->
	<section class="content">

		<!-- Default box -->

		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Sipariş Arama</h3>
			</div>
			<form asp-action="OrderList" asp-controller="Admin" method="get">
				<div class="card-body row">
					<div class="col-lg-4">
						<!-- Date -->
						<div class="form-group">
							<label>Başlangıç Tarihi</label>
							<div class="input-group date" id="reservationdates" data-target-input="nearest">
								<input type="text" class="form-control datetimepicker-input" name="sd"/>
								<div class="input-group-append" data-target="#reservationdates" data-toggle="datetimepicker">
									<div class="input-group-text"><i class="fa fa-calendar"></i></div>
								</div>
							</div>
						</div>
						<!-- Date dd/mm/yyyy -->
						<div class="form-group">
							<label>Bitiş Tarihi</label>
							<div class="input-group date" id="reservationdate" data-target-input="nearest">
								<input type="text" class="form-control datetimepicker-input" name="ld" />
								<div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
									<div class="input-group-text"><i class="fa fa-calendar"></i></div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-4">
						<!--Orders-->
						<div class="form-group">
							<div class="form-group">
								<label>Sipariş Durumları</label>
								<select class="form-control" name="sid">
									<option value="">Seçiniz</option>
									@foreach (var item in Model.SiparisDurumu)
									{
										<option value="@item.Value">@item.Text</option>
										

									}

								</select>
							</div>
							<!-- /.input group -->
						</div>
						<!-- Orders -->
						<!-- /.form group -->
						<div class="form-group">
							<label>Müşteri Adı</label>
							<div class="input-group">
								<input type="text" class="form-control" name="ma">
							</div>
							<!-- /.input group -->
						</div>

						<!-- /.form group -->

					</div>
					<div class="col-lg-4">
						<!-- Sipariş numarası -->
						<div class="form-group">
							<label>Sipariş Numarası</label>
							<div class="input-group">
								<input type="text" class="form-control" name="sn">
							</div>
							<!-- /.input group -->
						</div>


					</div>
					<!-- /.card-body -->
					<div class="col-lg-12">
						<button type="submit" class="btn btn-info btn-sm col-12" asp-action="OrderList" asp-controller="Admin">
							<i class="fas fa-search">
							</i> Arama
						</button>
					</div>

				</div>
			</form>

			<!-- /.card -->
		</div><!-- /.row -->


	</section>
	<!-- Search Customer -->
	<!-- Main content -->
	<section class="content">
		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Siparişler</h3>
			</div>
			<div class="card-body p-0">
				<table class="table table-striped projects">
					<thead>
						<tr>
							<th style="width: 15%">
								Sipariş Numarası
							</th>
							<th style="width: 13%">
								Müşteri Adı
							</th>
							<th style="width: 14%">
								Sipariş Durumu

							</th>
							<th style="width: 10%">
								Ödeme Durumu
							</th>
							<th style="width:15%">
								Ödeme Tarihi
							</th>
							<th class="width:19%">
								Sipariş Tarihi
							</th>
							<th class="width: 15%">
								Göster
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var sipariş in Model.Satislar)
						{

							<tr>
								<td>
									@sipariş.SatisID
								</td>
								<td>
									@sipariş.MusteriID
								</td>

								@switch (sipariş.SiparisDurumID)
								{
									case 1:
										<td>İşleniyor</td>
										break;
									case 2:
										<td>Hazırlanıyor</td>
										break;

									case 3:
										<td>İptal</td>
										break;

									case 4:
										<td>Kargoya Verildi</td>
										break;

									case 5:
										<td>Teslim Edildi</td>
										break;


									default:
										<td>Hata</td>
										break;

								}

								<td>
									@if (sipariş.OdemeDurumuID != 1)
									{
										<i class="icon fas fa-check text-success"></i>
									}
								</td>
								<td>
									@sipariş.OdemeTarihi
								</td>
								<td>
									@sipariş.SatisTarihi
								</td>
								<td>
									<a class="btn btn-info btn-sm" href="#">
										<i class="fa fa-eye"></i>
										Göster
									</a>
								</td>
							</tr>

						}
					</tbody>

				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->


	</section>
	<!-- /.content -->
</div>

@section Scripts{
	<script>
		$(function () {
			//Date picker
			$('#reservationdate').datetimepicker({
				format: 'L'
			});

			//Date and time picker
			$('#reservationdatetime').datetimepicker({ icons: { time: 'far fa-clock' } });

			//Date picker
			$('#reservationdates').datetimepicker({
				format: 'L'
			});

			//Date and time picker
			$('#reservationdatetimes').datetimepicker({ icons: { time: 'far fa-clock' } });

		})
	</script>

}