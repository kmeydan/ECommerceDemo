@using ECommerceWebUI.Models.ViewModels.AdminViewModels.ListModel;
@model MarkaListViewModel
@{
	ViewData["Title"] = "Brands";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0">Markalar</h1>
				</div><!-- /.col -->
				<div class="col-sm-6">
					<ul class="breadcrumb float-sm-right">
						<a href="#" class="btn btn-success btn-sm">
							<i class="fa fa-plus-square"></i>
							Yeni Ekle
						</a>

					</ul>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- Search Customer -->
	<section class="content">

		<!-- Default box -->

		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Arama</h3>
			</div>
			<form asp-action="Brands" asp-controller="Admin" method="post">

				<div class="card-body row">
					<div class="col-lg-4">
						<!-- Category-->
						<div class="form-group">
							<div class="form-group">
								<label>Marka İsmi</label>
								<div class="input-group">
									<input type="text" class="form-control" name="brandName">
								</div>
							</div>
							<!-- /.input group -->
						</div>
						<!-- Category -->
						<!-- /.form group -->
					</div>
					<!-- /.card-body -->
					<div class="col-lg-12">
						<button class="btn btn-info btn-sm col-12" href="#">
							<i class="fas fa-search">
							</i> Arama
						</button>
					</div>

				</div>
			</form>

			<!-- /.card -->
		</div><!-- /.row -->


	</section>
	<!-- Search Customer -->
	<!-- Main content -->
	<section class="content">
		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Markalar</h3>
			</div>
			<div class="card-body p-0">
				<table class="table table-striped projects">
					<thead>
						<tr>
							<th style="width: 30%">
								Şirket Adı
							</th>
							<th style="width: 15%">
								Telefon Numarası
							</th>
							<th style="width: 15%">
								Bölge
							</th>
							<th style="width: 20%">
								Şehir
							</th>
							<th style="width: 10%">
								Ülke
							</th>
							<th>
								Düzenle
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var marka in Model.Marka)
						{

							<tr>
								<td>
									@marka.SirketAdi

								</td>
								<td>
									@marka.Telefon
								</td>
								<td>
									@marka.Bolge
								</td>

								<td>
									@marka.Sehir
								</td>
								<td>
									@marka.Ulke
								</td>
								<td>
									<a class="btn btn-info btn-sm" href="#">
										<i class="fas fa-pencil-alt">
										</i>
										Düzenle
									</a>
								</td>

							</tr>
						}
					</tbody>

				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->


	</section>
	<!-- /.content -->
</div>

