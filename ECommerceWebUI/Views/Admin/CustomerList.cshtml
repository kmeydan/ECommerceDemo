@using ECommerceWebUI.Models.ViewModels.AdminViewModels.ListModel;
@model CustomerListViewModel
@{
	ViewData["Title"] = "List";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0">Müşteri</h1>
				</div><!-- /.col -->
				<div class="col-sm-6">
					<ul class="breadcrumb float-sm-right">
						<a href="#" class="btn btn-success btn-sm">
							<i class="fa fa-plus-square"></i>
							Yeni Ekle
						</a>
					</ul>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- Search Customer -->
	<form asp-action="CustomerList" asp-controller="Admin" method="post">

		<div class="card-body row">
			<div class="col-lg-4">

				<!-- Date -->
				<div class="form-group">
					<label>Oluşturulma Tarihi</label>
					<div class="input-group date" id="reservationdates" data-target-input="nearest">
						<input type="text" class="form-control datetimepicker-input" name="startdate" data-target="#reservationdates" />
						<div class="input-group-append" data-target="#reservationdates" data-toggle="datetimepicker">
							<div class="input-group-text"><i class="fa fa-calendar"></i></div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label>Müsteri Adı</label>
					<input type="text" class="form-control" name="name" />

				</div>
			</div>
			<div class="col-lg-4">
				<!-- Teslimat-->
				<div class="form-group">
					<div class="form-group">
						<div class="form-group">
							<label>Telefon Numarası</label>
							<input type="text" class="form-control" name="no"/>

						</div>
					</div>
					
					<!-- /.input group -->
				</div>
				<!-- Teslimat -->
				<!-- /.form group -->
			</div>
			<div class="col-lg-4">
				<!-- Siparis Numarası-->
				<div class="form-group">
					<div class="form-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email"/>
					</div>
					<!-- /.input group -->
				</div>
				<!-- Siparis Numarası -->

			</div>
			<!-- /.card-body -->
			<div class="col-lg-12">
				<button type="submit" asp-action="CustomerList" asp-controller="Admin" class="btn btn-info btn-sm col-12">
					<i class="fas fa-search">
					</i> Arama
				</button>
			</div>

		</div>
	</form>
<!-- Main content -->
<section class="content">
	<!-- Default box -->
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">Müşteriler</h3>
		</div>
		<div class="card-body p-0">
			<table class="table table-striped projects">
				<thead>
					<tr>
						<th style="width: 1%">
							#
						</th>
						<th style="width: 20%">
							E-posta
						</th>
						<th style="width: 20%">
							Adı
						</th>
						<th style="width: 15%">
							Telefon
						</th>
						<th style="width: 30%">
							Oluşturulma Tarihi
						</th>
						<th>
							Düzenle
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.Customers)
					{
					<tr>
						<td>
							#
						</td>
						<td>
							<a>
								@if (item.EPosta!=null)
								{
								@item.EPosta
								}
							</a>
						</td>
						<td>
							<a>
								@item.MusteriAdi
							</a>
						</td>
						<td>
							<a>
								@item.Telefon
							</a>
						</td>
						<td>
							@if (@item.OlusturulmaTarihi!=null)
							{
							<a>
								@item.OlusturulmaTarihi
							</a>
							}


						</td>
						<td>
							<a class="btn btn-info btn-sm" href="#">
								<i class="fa fa-eye"></i>
								Göster
							</a>
						</td>
					</tr>

					}

				</tbody>

			</table>
		</div>
		<!-- /.card-body -->
	</div>
	<!-- /.card -->


</section>
<!-- /.content -->
</div>

@section Scripts{
		<script>
			$(function () {
				//Date picker
				$('#reservationdate').datetimepicker({
					format: 'L'
				});

				//Date and time picker
				$('#reservationdatetime').datetimepicker({ icons: { time: 'far fa-clock' } });

				//Date picker
				$('#reservationdates').datetimepicker({
					format: 'L'
				});

				//Date and time picker
				$('#reservationdatetimes').datetimepicker({ icons: { time: 'far fa-clock' } });

			})
		</script>

}

