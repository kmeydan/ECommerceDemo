	<!-- Search Customer -->
	<section class="content">

		<!-- Default box -->

		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Müşteri Ara</h3>
			</div>
			<div class="card-body row">
				<div class="col-lg-6">
					<!-- Date dd/mm/yyyy -->
					<div class="form-group">
						<label>Oluşturulma Tarihi</label>

						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
							</div>
							<input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask="" inputmode="numeric">
						</div>
						<!-- /.input group -->
					</div>
					<!-- /.form group -->
					<!-- phone mask -->
					<div class="form-group">
						<label>Telefon Numarası</label>
						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-phone"></i></span>
							</div>
							<input type="text" class="form-control" data-inputmask="&quot;mask&quot;: &quot;(999) 999-9999&quot;" data-mask="" inputmode="text">
						</div>
						<!-- /.input group -->
					</div>
					<!-- /.form group -->
				</div>
				<div class="col-lg-6">
					<!-- email-->
					<div class="form-group">
						<label>E Posta</label>

						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="far fa-envelope"></i></span>
							</div>
							<input type="text" class="form-control">
						</div>
						<!-- /.input group -->
					</div>
					<!-- email -->
					<!-- /.form group -->
					<!-- İsim Soyisim-->
					<div class="form-group">
						<label>İsim Soyisim</label>

						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-laptop"></i></span>
							</div>
							<input type="text" class="form-control"">
						</div>
						<!-- /.input group -->
					</div>
					<!-- /.form group -->

				</div>
				<!-- /.card-body -->
				<div class="col-lg-12">
					<a class="btn btn-info btn-sm col-12" href="#">
						<i class="fas fa-search">
						</i> Arama
					</a>
				</div>

			</div>

			<!-- /.card -->
