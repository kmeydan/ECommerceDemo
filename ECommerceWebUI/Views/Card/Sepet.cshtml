@using ECommerceWebUI.Models.ViewModels.CardViewModel
@model CardSummaryViewModel
@{
	ViewData["Title"] = "Sepet";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
	<div class="row px-xl-5">
		<div class="col-lg-8 table-responsive mb-5">
			<table class="table table-light table-borderless table-hover text-center mb-0">
				<thead class="thead-dark">
					<tr>
						<th>Ürünler</th>
						<th>Fiyat</th>
						<th>Adet</th>
						<th>Toplam</th>
						<th>Sil</th>
					</tr>
				</thead>
				<tbody class="align-middle">

					@foreach (var card in Model.Card.CardLines)
					{
						<tr>
							@{
								var toDecimalQuantity = (decimal)card.Quantity;
								var toplam = card.Urun.BirimFiyati * toDecimalQuantity;
								var toIntQuantity = (int)(card.Quantity);
							}
							<td class="align-middle"><img src="/img/Product/@card.Urun.GorselUrl" style="width: 50px;"> @card.Urun.UrunAdi</td>
							<td class="align-middle">@card.Urun.BirimFiyati.ToString("c")</td>
							<td class="align-middle">
								<div class="input-group quantity mx-auto" style="width: 100px;">
									<div class="input-group-btn">
										<a class="btn btn-sm btn-primary btn-minus">
											<i class="fa fa-minus"></i>
										</a>
									</div>
									<input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="@toIntQuantity">

									<div class="input-group-btn">
										<a class="btn btn-sm btn-primary btn-plus" asp-action="AddToCard" asp-controller="Card" asp-route-productId="@card.Urun.UrunID">
											<i class="fa fa-plus"></i>
										</a>
									</div>
								</div>
							</td>

							<td class="align-middle">@toplam.ToString("c")</td>
							<td class="align-middle"><a class="btn btn-sm btn-danger" asp-action="RemoveCard" asp-route-productId="@card.Urun.UrunID"><i class="fa fa-times"></i></a></td>


						</tr>
					}


				</tbody>
			</table>
		</div>
		<div class="col-lg-4">
			<form class="mb-30" action="">
				<div class="input-group">
					<input type="text" class="form-control border-0 p-4" placeholder="Kupon Kodu Giriniz">
					<div class="input-group-append">
						<button class="btn btn-primary">Kupon Kullan</button>
					</div>
				</div>
			</form>
			@{
				var kargoUcreti = 25;
				var genelToplam = kargoUcreti + Model.Card.Total;
			}
			<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sepetiniz</span></h5>
			<div class="bg-light p-30 mb-5">
				<div class="border-bottom pb-2">
					<div class="d-flex justify-content-between mb-3">
						<h6>Ara-Toplam</h6>
						<h6>@Model.Card.Total.ToString("c")</h6>
					</div>
					<div class="d-flex justify-content-between">
						<h6 class="font-weight-medium">Kargo</h6>
						<h6 class="font-weight-medium">@kargoUcreti.ToString("c")</h6>
					</div>
				</div>
				<div class="pt-2">
					<div class="d-flex justify-content-between mt-2">
						<h5>Toplam</h5>
						<h5>@genelToplam.ToString("c")</h5>
					</div>
					<a asp-action="TeslimatAdresi" asp-controller="Card" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Siparişi Tamamla</a>
				</div>
			</div>
		</div>
	</div>
</div>

